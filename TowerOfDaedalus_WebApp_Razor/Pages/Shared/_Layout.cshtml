@using Microsoft.AspNetCore.Authorization
@using static TowerOfDaedalus_WebApp_Arango.Schema.Documents
@using TowerOfDaedalus_WebApp_Razor.Properties
<!DOCTYPE html>
@inject SignInManager<Users> signInManager;
@inject IAuthorizationService AuthorizationService;
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Towers of Daedelus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TowerOfDaedelus_WebApp.styles.css" asp-append-version="true" />
    <link rel="icon" href= "@Url.Content("~/favicon.ico")" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="@Resources.imgUriLogoOnWhite" alt="logo" width="50"/>
                <a class="navbar-brand" asp-area="" asp-page="/Index">The Towers of Daedelus</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @if ((await AuthorizationService.AuthorizeAsync(User, "allPlayers")).Succeeded)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/PlayerTools/PointBuyCalculator">Point Buy Calculator</a>
                            </li>
                        }
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/PlayerTools/PointBuyCalculator">Point Buy Calculator</a>
                        </li>
                    </ul>
                    <partial name="_LobbyStatusPartial"/>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TheDrakonLord - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>