<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <log4net>
    <!-- Console is set to be a ConsoleAppender-->
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <!-- Console uses PatternLayout-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-4timestamp [%thread] %-5level || %logger %ndc - %message%newline" />
      </layout>
    </appender>

    <!-- RollingFile is set to be a RollingFileAppender-->
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="TowerOfDaedalus_Logs.log" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="2" />
      <!-- RollingFile uses PatternLayout-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-4timestamp [%thread] %-5level || %logger %ndc - %message%newline" />
      </layout>
    </appender>

    <!-- DebugAppender is set to be a DebugAppender-->
    <appender name="DebugAppender" type="log4net.Appender.DebugAppender">
      <!-- DebugAppender uses PatternLayout-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-4timestamp [%thread] %-5level || %logger %ndc %exception - %message%newline" />
      </layout>
    </appender>

    <!-- Set root logger level to DEBUG and set its appenders-->
    <root>
      <level value="DEBUG" />
      <appender-ref ref="Console" />
    </root>
  </log4net>
</configuration>